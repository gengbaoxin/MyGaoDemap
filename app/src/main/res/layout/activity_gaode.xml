<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_map" />

    <ImageView
        android:id="@+id/iv_center_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/poi_marker_pressed"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@mipmap/location_gps_green" />

    <LinearLayout
        android:id="@+id/ll_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Cjingdu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=" " />

        <TextView
            android:id="@+id/Cweidu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=" " />

        <TextView
            android:id="@+id/Cweizhi"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=" " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/map"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/jingdu"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text=" " />

            <TextView
                android:id="@+id/weidu"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text=" " />

            <TextView
                android:id="@+id/weizhi"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text=" " />

            <TextView
                android:id="@+id/jingweizhi"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text=" "
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>